# .env.production

# Base URLs
NEXT_PUBLIC_APP_URL="https://your-production-domain.com"
NEXT_PUBLIC_API_URL="https://api.your-production-domain.com"
NEXT_PUBLIC_WS_URL="wss://ws.your-production-domain.com"

# Database URLs
DATABASE_URL="postgresql://username:password@db-host:5432/worldvibe"
TIMESCALEDB_URL="postgresql://username:password@timescaledb-host:5432/worldvibe_timeseries"
REDIS_URL="redis://username:password@redis-host:6379"

# Real-time Processing
KAFKA_BROKERS="kafka-broker1:9092,kafka-broker2:9092"
KAFKA_CLIENT_ID="worldvibe-prod"

# Analytics & Monitoring
NEXT_PUBLIC_AMPLITUDE_API_KEY="your_production_amplitude_api_key"
SENTRY_DSN="your_production_sentry_dsn"

# Maps & Geolocation
NEXT_PUBLIC_MAPBOX_TOKEN="your_production_mapbox_token"

# Cache & Performance
CACHE_TTL="3600" # 1 hour
REVALIDATE_INTERVAL="300" # 5 minutes

# Rate Limiting
RATE_LIMIT_MAX="100" # Max 100 requests
RATE_LIMIT_WINDOW="60" # Per 60 seconds

# Security
JWT_SECRET="your_production_jwt_secret"
ENCRYPTION_KEY="your_production_encryption_key"
API_KEY_SALT="your_production_api_key_salt"

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_ADS="true"

# Region Configuration
DEFAULT_REGION="GLOBAL"
MIN_REGION_GROUP_SIZE="100"

# Ads Configuration
AD_REFRESH_INTERVAL="300" # 5 minutes
MAX_ADS_PER_PAGE="3"

# Key-Value Store (if applicable)
KV_URL="your_production_kv_url"
KV_REST_API_URL="your_production_kv_rest_api_url"
KV_REST_API_TOKEN="your_production_kv_rest_api_token"
KV_REST_API_READ_ONLY_TOKEN="your_production_kv_read_only_token"
