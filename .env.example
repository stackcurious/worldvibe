# Environment variables for WorldVibe application
# ------------------------------------------------
# Copy this file to .env.local for local development

# Base URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# Database URLs
# Primary database connection
DATABASE_URL="postgresql://worldvibe:worldvibe@localhost:5432/worldvibe"
# Direct connection (used for administrative operations)
DIRECT_DATABASE_URL="postgresql://worldvibe:worldvibe@localhost:5432/worldvibe"
# TimescaleDB specialized connection
TIMESCALEDB_URL="postgresql://worldvibe:worldvibe@localhost:5432/worldvibe"

# Database connection limits
DATABASE_CONNECTION_LIMIT="10"
DATABASE_POOL_TIMEOUT="10"
DATABASE_CONNECT_TIMEOUT="10"
DATABASE_IDLE_TIMEOUT="60"

# Redis URL
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_TOKEN=""

# TimescaleDB configuration
TIMESCALEDB_MAX_CONNECTIONS="20"
TIMESCALEDB_STATEMENT_TIMEOUT="30000"
TIMESCALEDB_QUERY_TIMEOUT="60000"

# Upstash and KV (optional)
KV_URL=""
KV_REST_API_URL=""
KV_REST_API_TOKEN=""
KV_REST_API_READ_ONLY_TOKEN=""
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Real-time Processing
KAFKA_BROKERS="localhost:9092"
KAFKA_USERNAME=""
KAFKA_PASSWORD=""
KAFKA_CLIENT_ID="worldvibe-dev"

# Analytics & Monitoring
NEXT_PUBLIC_AMPLITUDE_API_KEY=""
SENTRY_DSN=""
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""
DATADOG_API_KEY=""
DATADOG_APP_KEY=""

# Maps & Geolocation
NEXT_PUBLIC_MAPBOX_TOKEN=""
GEOLOCATION_API_KEY=""

# Cache & Performance
CACHE_TTL="60"
REVALIDATE_INTERVAL="30"

# Rate Limiting (More lenient for development)
RATE_LIMIT_MAX="1000"
RATE_LIMIT_WINDOW="86400"

# Security (Change in production)
JWT_SECRET="dev-local-secret-key-change-in-production"
ENCRYPTION_KEY="dev-local-encryption-key-32-bytes-len"
API_KEY_SALT="dev-local-salt"

# Feature Flags
NEXT_PUBLIC_ENABLE_REALTIME="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_ADS="false"

# Region Configuration
DEFAULT_REGION="GLOBAL"
MIN_REGION_GROUP_SIZE="1"

# Ads Configuration
AD_REFRESH_INTERVAL="300"
MAX_ADS_PER_PAGE="3"

# Email Service (Resend)
RESEND_API_KEY=""
FROM_EMAIL="reminders@worldvibe.app"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Admin Access Control
ADMIN_EMAIL="your-admin-email@example.com"